{
  "name": "fairway-salesforce",
  "version": "1.0.0",
  "description": "email templates for salesforce",
  "main": "index.js",
  "scripts": {
    "mjml": "mjml ./dist/_mjml/*.html -o ./dist",
    "nunjucks:dev": "nunjucks *.mjml data.dev.json -p ./src -o ./dist/_mjml",
    "nunjucks:prod": "nunjucks *.mjml data.prod.json -p ./src -o ./dist/_mjml",
    "serve": "live-server ./dist --no-browser --port=3000 --no-css-inject",
    "build:html:dev": "npm run nunjucks:dev && npm run mjml",
    "build:html:prod": "npm run nunjucks:prod && npm run mjml",
    "build:img:dev": "cp -r ./img/* ./dist/img",
    "build:img:prod": "imagemin ./img/* --out-dir ./dist/img",
    "version": "hashmark -m ../../manifest.json --rename -d md5 -c dist/img '*.*' '{name}.{hash}{ext}'",
    "revision": "replaceinfiles -r manifest.json -s ./dist/*.html -d ./dist/{base}",
    "watch:html": "onchange './src' -- npm run build:html:dev",
    "watch:data": "onchange '*.json' -- npm run build:html:dev",
    "watch:img": "onchange './img' -- npm run build:img:dev",
    "start": "npm run build:html:dev && npm run build:img:dev && concurrently --kill-others \"npm run watch:html\" \"npm run watch:data\" \"npm run watch:img\" \"npm run serve\"",
    "deploy:build": "rm -rf ./dist && mkdir dist && npm run build:html:prod && npm run build:img:prod && npm run version && npm run revision && rm -rf ./dist/_mjml",
    "deploy:push": "scp ./dist/*.html deploy@prod:/home/deploy/html/fairway321.com/salesforce/",
    "deploy:aws": "aws s3 cp dist/img s3://fairway-salesforce --recursive",
    "deploy": "npm run deploy:build && npm run deploy:push && npm run deploy:aws"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robertkanyur/fairway-salesforce.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/robertkanyur/fairway-salesforce/issues"
  },
  "homepage": "https://github.com/robertkanyur/fairway-salesforce#readme",
  "devDependencies": {
    "@songkick/replaceinfiles": "^1.1.6",
    "concurrently": "^4.1.0",
    "hashmark": "^5.0.0",
    "imagemin-cli": "^4.0.1",
    "live-server": "^1.2.1",
    "mjml": "^4.4.0-beta.1",
    "node-version-assets": "github:techjacker/node-version-assets",
    "nunjucks-cli": "^0.5.1",
    "onchange": "^5.2.0"
  },
  "dependencies": {}
}
